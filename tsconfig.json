{
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"],
	"compileOnSave": false,
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "CommonJS",
		"rootDir": "./src",
		"outDir": "./dist",
		"sourceMap": true,
		"strict": true,
		"baseUrl": "src",
		"skipLibCheck": true,
		"removeComments": true
	}
}
